#! /usr/bin/env bash
set -e # stop the execution of the script if it fails

ABS_PATH=$(readlink -f "$0")
CFN_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $CFN_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)
CFN_TEMPLATE_PATH="$PROJECT_PATH/aws/cfn/service/service.yaml"
CONFIG_PATH="$PROJECT_PATH/aws/cfn/service/config.toml"
echo "CFN_TEMPLATE_PATH: $CFN_TEMPLATE_PATH"

cfn-lint $CFN_TEMPLATE_PATH

BUCKET=$(cfn-toml key deploy.bucket -t $CONFIG_PATH)
REGION=$(cfn-toml key deploy.region -t $CONFIG_PATH)
STACK_NAME=$(cfn-toml key deploy.stack_name -t $CONFIG_PATH)
PARAMETERS=$(cfn-toml params v2 -t $CONFIG_PATH)

aws cloudformation deploy \
  --stack-name $STACK_NAME \
  --s3-bucket $BUCKET \
  --s3-prefix services \
  --region $REGION \
  --template-file "$CFN_TEMPLATE_PATH" \
  --no-execute-changeset \
  --tags group=cruddur-services \
  --parameter-overrides $PARAMETERS \
  --capabilities CAPABILITY_NAMED_IAM