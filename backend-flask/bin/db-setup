#! /usr/bin/bash
-e # stop if it fails at any point

bin_path="$(realpath .)/bin"

if [[ "$1" == "prod" ]]; then
    PROD_FLAG="prod"
else
    PROD_FLAG=""
fi

source "$bin_path/db-drop" $PROD_FLAG
source "$bin_path/db-create" $PROD_FLAG
source "$bin_path/db-schema-load" $PROD_FLAG
source "$bin_path/db-seed" $PROD_FLAG